      "info": "not necessary\n"
    },
    {
      "type": "text",
      "label": "Background Image Alt",
      "id": "doctor-background-alt"
    },
    {
      "type": "image_picker",
      "label": "Doctor Image",
      "id": "doctor-image"
    },
    {
      "type": "image_picker",
      "label": "Doctor Image Mobile",
      "id": "doctor-image-mobile"
    },
    {
      "type": "text",
      "label": "Doctor Image Alt",
      "id": "doctor-image-alt"
    },
    {
      "type": "header",
      "content": "Section Content"
    },
    {
      "type": "text",
      "label": "Subtitle",
      "id": "subtitle",
      "default": "Meet The Founder"
    },
    {
      "type": "text",
      "label": "Title",
      "id": "title",
      "default": "Dr. Mallory Blair, PhD\n"
    },
    {
      "type": "text",
      "label": "Text",
      "id": "text",
      "default": "Scientist, professor - and mom of two - Dr. Blairâ€™s innovations live at the intersection of\nnutrition, microfluidics, and biochemistry."
    },
    {
      "type": "header",
      "content": "button"
    },
    {
      "type": "text",
      "id": "button_text",
